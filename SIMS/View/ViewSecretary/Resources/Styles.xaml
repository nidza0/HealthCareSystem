<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:SIMS.View.ViewSecretary.Resources">
    <Style TargetType="Button" x:Key="StyleOrdinaryButton">
        <Setter Property="Background" Value="{DynamicResource UiSecondaryColor}"></Setter>
        <Setter Property="Padding" Value="6"></Setter>
    </Style>

    <Style TargetType="Button" x:Key="StyleOKButton">
        <Setter Property="Background" Value="{DynamicResource UiPrimaryColor}"></Setter>
        <Setter Property="Foreground" Value="{DynamicResource FontLightColor}"></Setter>
        <Setter Property="Padding" Value="6"></Setter>
    </Style>

    <Style x:Key="InfoHeader" TargetType="Label">
        <Setter Property="Background" Value="{DynamicResource UiSecondaryColor}"></Setter>
    </Style>

    <Style x:Key="PanelHeader" TargetType="DockPanel">
        <Setter Property="Background" Value="{DynamicResource UiPrimaryColor}"></Setter>
    </Style>

    <Style x:Key="HeaderCloseButton" TargetType="Button">
        <Setter Property="Background" Value="{DynamicResource UiPrimaryColor}"></Setter>
        <Setter Property="Foreground" Value="{DynamicResource FontLightColor}"></Setter>
        <Setter Property="Padding" Value="5"></Setter>
        <Setter Property="BorderBrush" Value="Transparent"></Setter>
    </Style>

    <Style x:Key="LabelInfo" TargetType="Label">
        <Setter Property="Foreground" Value="#ababab"></Setter>
    </Style>

    <Style x:Key="HorizontalSeparatorStyle" TargetType="Separator">
        <Setter Property="Height" Value="4"></Setter>
        <Setter Property="Background" Value="#ababab"></Setter>
        <Setter Property="HorizontalAlignment" Value="Stretch"></Setter>
    </Style>

    <Style x:Key="errorLabel" TargetType="Label">
        <Setter Property="Foreground" Value="Red"></Setter>
    </Style>

    <Style TargetType="{x:Type DatePickerTextBox}">
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate>
                    <TextBox x:Name="PART_TextBox"
                        Text="{Binding Path=SelectedDate, StringFormat='dd.MM.yyyy.', RelativeSource={RelativeSource AncestorType={x:Type DatePicker}}}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <ControlTemplate x:Key="SidebarButtons" TargetType="RadioButton">
        <Border x:Name="brdr">
            <ContentPresenter></ContentPresenter>
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="IsChecked" Value="True">
                <Setter TargetName="brdr" Property="Background" Value="#ff0000"></Setter>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
</ResourceDictionary>