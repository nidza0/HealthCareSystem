<Page x:Class="SIMS.View.ViewSecretary.Pages.CompanyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SIMS.View.ViewSecretary.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CompanyPage">

    <StackPanel VerticalAlignment="Center">
        <Image Source="/SIMS;component/View/ViewSecretary/Resources/Images/healthcare.jpg" Height="150"></Image>
        <StackPanel>
            <Label x:Name="CompanyName" Content="{StaticResource CompanyName}" Padding="0" FontSize="50" HorizontalAlignment="Center" Foreground="RoyalBlue"></Label>
            <Label x:Name="CompanyType" Content="{StaticResource CompanyType}" Padding="0" FontSize="15" HorizontalAlignment="Center" Foreground="RoyalBlue"></Label>
        </StackPanel>
    </StackPanel>
</Page>
