<Page x:Class="SIMS.View.ViewSecretary.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SIMS.View.ViewSecretary.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingsPage">

    <StackPanel Margin="6">
        <StackPanel Orientation="Horizontal">
            <Label Content="Color:"></Label>
            <RadioButton x:Name="radioBlue" GroupName="color" Checked="color_Checked">
                <StackPanel Width="20" Height="20" Background="RoyalBlue"></StackPanel>
            </RadioButton>
            <RadioButton x:Name="radioGreen" GroupName="color" Checked="color_Checked">
                <StackPanel Width="20" Height="20" Background="SeaGreen"></StackPanel>
            </RadioButton>
            <RadioButton x:Name="radioRed" GroupName="color" Checked="color_Checked">
                <StackPanel Width="20" Height="20" Background="Brown"></StackPanel>
            </RadioButton>
        </StackPanel>
        <Button x:Name="btnFeedback" Content="{StaticResource btnAppFeedback}" HorizontalAlignment="Left" Style="{StaticResource StyleOKButton}" Click="btnFeedback_Click"></Button>
    </StackPanel>
</Page>
