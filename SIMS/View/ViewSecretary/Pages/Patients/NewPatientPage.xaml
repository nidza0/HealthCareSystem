<Page x:Class="SIMS.View.ViewSecretary.Pages.Patients.NewPatientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      xmlns:local="clr-namespace:SIMS.View.ViewSecretary.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="800"
      Title="NewPatientPageSecretary">

    <Page.Resources>
        <x:Array Type="sys:String" x:Key="countries">
            <sys:String>Serbia</sys:String>
            <sys:String>Croatia</sys:String>
            <sys:String>Slovenia</sys:String>
            <sys:String>Hungary</sys:String>
        </x:Array>

        <x:Array Type="sys:String" x:Key="cities">
            <sys:String>Novi Sad</sys:String>
            <sys:String>Subotica</sys:String>
            <sys:String>Zrenjanin</sys:String>
            <sys:String>Sombor</sys:String>
            <sys:String>Kikinda</sys:String>
            <sys:String>Bečej</sys:String>
            <sys:String>Vršac</sys:String>
            <sys:String>Sremska Mitrovica</sys:String>
        </x:Array>
    </Page.Resources>

    <DockPanel>
        <Label DockPanel.Dock="Top" Content="{StaticResource NewPatient}" Background="{DynamicResource UiPrimaryColor}" Foreground="{DynamicResource FontLightColor}" HorizontalContentAlignment="Center" BorderBrush="{DynamicResource UiPrimaryColor}" BorderThickness="0 0 0 2" Height="auto" Width="auto"></Label>

        <ScrollViewer DockPanel.Dock="Bottom" VerticalScrollBarVisibility="Auto">

            <StackPanel Margin="6">
                <StackPanel.Resources>
                    <Style TargetType="TextBox">
                        <Style.Triggers>
                            <Trigger Property="ToolTip" Value="{x:Static sys:String.Empty}">
                                <Setter Property="ToolTipService.IsEnabled" Value="False"></Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Resources>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="6">
                        <Label x:Name="lblGeneralPatientInfo" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource InfoHeader}" Content="{StaticResource lblGeneralPatientInfo}" HorizontalContentAlignment="Center"></Label>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Grid.Column="0">
                                <Label x:Name="lblUsername" Content="{StaticResource lblUsername}"></Label>
                                <Label x:Name="errUsername" Content="{StaticResource errUsername}" Style="{StaticResource errorLabel}" Visibility="Collapsed"></Label>
                                <Label x:Name="errUsernameNotUnique" Content="{StaticResource errUsernameNotUnique}" Style="{StaticResource errorLabel}" Visibility="Collapsed"></Label>
                                <TextBox x:Name="textUsername" Text="{Binding Patient.UserName}" Width="auto" Margin="6" ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}" VerticalContentAlignment="Center" GotFocus="textUsername_GotFocus">
                                    <TextBox.Style>
                                        <Style>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=textUsername, Path=IsVisible}" Value="True">
                                                    <Setter Property="FocusManager.FocusedElement" Value="{Binding ElementName=textUsername}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="0">
                                <Label x:Name="lblName" Content="{StaticResource lblName}"></Label>
                                <Label x:Name="errName" Content="{StaticResource errName}" Style="{StaticResource errorLabel}" Visibility="Collapsed"></Label>
                                <TextBox x:Name="textName" Text="{Binding Patient.Name}" Width="auto" Margin="6" ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}" VerticalContentAlignment="Center" GotFocus="textName_GotFocus"></TextBox>
                            </StackPanel>

                            <StackPanel Grid.Row="2" Grid.Column="0">
                                <Label x:Name="lblSurname" Content="{StaticResource lblSurname}"></Label>
                                <Label x:Name="errSurname" Content="{StaticResource errSurname}" Style="{StaticResource errorLabel}" Visibility="Collapsed"></Label>
                                <TextBox x:Name="textSurname" Text="{Binding Patient.Surname}" Width="auto" Margin="6" ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}" VerticalContentAlignment="Center" GotFocus="textSurname_GotFocus"></TextBox>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="6">
                        <Label x:Name="lblEmergencyContactInfo" Grid.Row="13" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource InfoHeader}" Content="{StaticResource lblEmergencyContactInfo}" HorizontalContentAlignment="Center"></Label>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Grid.Column="0">
                                <Label x:Name="lblEmergencyName" Content="{StaticResource lblEmergencyName}"></Label>
                                <TextBox x:Name="textEmergencyName" Text="{Binding Patient.EmergencyContact.Name}" Width="auto" Margin="6" ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}" VerticalContentAlignment="Center"></TextBox>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="0">
                                <Label x:Name="lblEmergencySurname" Content="{StaticResource lblEmergencySurname}"></Label>
                                <TextBox x:Name="textEmergencySurname" Text="{Binding Patient.EmergencyContact.Surname}" Width="auto" Margin="6" ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}" VerticalContentAlignment="Center"></TextBox>
                            </StackPanel>

                            <StackPanel Grid.Row="2" Grid.Column="0">
                                <Label x:Name="lblEmergencyTelephone" Content="{StaticResource lblEmergencyTelephone}"></Label>
                                <TextBox x:Name="textEmergencyTelephone" Text="{Binding Patient.EmergencyContact.PhoneNumber}" Width="auto" Margin="6" ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}" VerticalContentAlignment="Center"></TextBox>
                            </StackPanel>

                            <StackPanel Grid.Row="3" Grid.Column="0">
                                <Label x:Name="lblEmergencyEmail" Content="{StaticResource lblEmergencyEmail}"></Label>
                                <TextBox x:Name="textEmergencyEmail" Text="{Binding Patient.EmergencyContact.Email}" Width="auto" Margin="6" ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}" VerticalContentAlignment="Center"></TextBox>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Margin="6">
                        <Label x:Name="lblMorePatientInfo" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource InfoHeader}" Content="{StaticResource lblMorePatientInfo}" HorizontalContentAlignment="Center"></Label>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Grid.Column="0">
                                <Label x:Name="lblMiddleName" Content="{StaticResource lblMiddleName}"></Label>
                                <TextBox x:Name="textMiddleName" Text="{Binding Patient.MiddleName}" Width="auto" Margin="6" ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}" VerticalContentAlignment="Center"></TextBox>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="0">
                                <Label x:Name="lblGender" Content="{StaticResource lblGender}"></Label>
                                <StackPanel Orientation="Horizontal" Margin="6" VerticalAlignment="Center">
                                    <RadioButton x:Name="radioMale" Content="{StaticResource radioMale}" GroupName="radioGender" Margin="0 0 10 0" Checked="radioMale_Checked"></RadioButton>
                                    <RadioButton x:Name="radioFemale" Content="{StaticResource radioFemale}" GroupName="radioGender" Margin="0 0 10 0" Checked="radioFemale_Checked"></RadioButton>
                                    <RadioButton x:Name="radioOther" Content="{StaticResource radioOther}" GroupName="radioGender" Checked="radioOther_Checked"></RadioButton>
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Grid.Row="2" Grid.Column="0">
                                <Label x:Name="lblPID" Content="{StaticResource lblPID}"></Label>
                                <TextBox x:Name="textPID" Text="{Binding Patient.Uidn}" Width="auto" Margin="6" ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}" VerticalContentAlignment="Center"></TextBox>
                            </StackPanel>

                            <StackPanel Grid.Row="3" Grid.Column="0">
                                <Label x:Name="lblDateOfBirth" Content="{StaticResource lblDateOfBirth}"></Label>
                                <DatePicker x:Name="textDateOfBirth" SelectedDate="{Binding Patient.DateOfBirth}" Width="auto" Margin="6"></DatePicker>
                            </StackPanel>

                            <StackPanel Grid.Row="4" Grid.Column="0">
                                <Label x:Name="lblCountry" Content="{StaticResource lblCountry}"></Label>
                                <ComboBox x:Name="textCountry" ItemsSource="{Binding Countries}" SelectedItem="{Binding SelectedCountry, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" IsEditable="True" Width="auto" Margin="6" VerticalContentAlignment="Center" SelectionChanged="textCountry_SelectionChanged"></ComboBox>
                            </StackPanel>

                            <StackPanel Grid.Row="5" Grid.Column="0">
                                <Label x:Name="lblCity" Content="{StaticResource lblCity}"></Label>
                                <ComboBox x:Name="textCity" ItemsSource="{Binding Locations}" SelectedItem="{Binding SelectedLocation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" DisplayMemberPath="City" IsEditable="True" Width="auto" Margin="6" VerticalContentAlignment="Center"></ComboBox>
                            </StackPanel>

                            <StackPanel Grid.Row="6" Grid.Column="0">
                                <Label x:Name="lblAddress" Content="{StaticResource lblAddress}"></Label>
                                <TextBox x:Name="textAddress" Text="{Binding Patient.Address.Street}" Width="auto" Margin="6" ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}" VerticalContentAlignment="Center"></TextBox>
                            </StackPanel>

                            <StackPanel Grid.Row="7" Grid.Column="0">
                                <Label x:Name="lblTelephone" Content="{StaticResource lblTelephone}"></Label>
                                <TextBox x:Name="textTelephone" Text="{Binding Patient.HomePhone}" Width="auto" Margin="6" ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}" VerticalContentAlignment="Center"></TextBox>
                            </StackPanel>

                            <StackPanel Grid.Row="8" Grid.Column="0">
                                <Label x:Name="lblCellPhone" Content="{StaticResource lblCellPhone}"></Label>
                                <TextBox x:Name="textCellphone" Text="{Binding Patient.CellPhone}" Width="auto" Margin="6" ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}" VerticalContentAlignment="Center"></TextBox>
                            </StackPanel>
                            
                            <StackPanel Grid.Row="9" Grid.Column="0">
                                <Label x:Name="lblEmail" Content="{StaticResource lblEmail}"></Label>
                                <TextBox x:Name="textEmail" Text="{Binding Patient.Email1}" Width="auto" Margin="6" ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}" VerticalContentAlignment="Center"></TextBox>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Grid>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10 0 0">
                    <Button x:Name="btnNewPatient" Content="{StaticResource btnOK}" Style="{StaticResource StyleOKButton}" Margin="0 0 10 0" HorizontalAlignment="Center" Click="btnNewPatient_Click"></Button>
                    <Button Content="{StaticResource btnCancel}" Style="{StaticResource StyleOrdinaryButton}" Click="Button_Click" HorizontalAlignment="Center"></Button>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

    </DockPanel>
</Page>
