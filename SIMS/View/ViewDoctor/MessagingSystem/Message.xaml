<UserControl x:Class="SIMS.View.ViewDoctor.Message"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SIMS.View.ViewDoctor"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="350">
    <Border Background="LightGray" BorderBrush="LightGray" BorderThickness="5" CornerRadius="10" Margin="10">
        <Grid x:Name="MainGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>
            <StackPanel x:Name="TextContainer">
                <TextBlock x:Name="messageText" Text="This is the message." FontSize="26" FontFamily="Helvetica" VerticalAlignment="Center" Grid.Row="0" />
            </StackPanel>
            <TextBlock x:Name="messageTime" Text="TIME." TextAlignment="Right" VerticalAlignment="Bottom" HorizontalAlignment="Right" Grid.Row="1" />
        </Grid>
    </Border>
</UserControl>
