<UserControl x:Class="SIMS.View.ViewDoctor.PatientList.Diagnosis"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SIMS.View.ViewDoctor.PatientList"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="800">
    <Grid Background="LightGray" Margin="10">
        <Grid.ColumnDefinitions >
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="0.3*" />
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="DijagnozaTB" Text="Dijagnoza" FontFamily="Helvetica" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock x:Name="DatumTB" Text="Datum" FontFamily="Helvetica" FontSize="30" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button x:Name="DetaljiBTN" FontFamily="Helvetica" FontSize="20" Click="DetaljiBTN_Click" Grid.Column="2" Background="Transparent" Content="Detalji"/>
    </Grid>
</UserControl>
